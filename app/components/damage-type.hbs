<div class="row row-cols-sm-auto align-items-top">
  <div class="col">
    <label for="damage">Attack Damage</label>
    <Input data-test-input-damage class="form-control" @type="text" name="damage" aria-describedby="dmgDescription"
      @value={{@initialDamage}} {{on "input" (fn @setDamage)}} />
    <small id="dmgDescription" class="form-text text-muted">
      A string of the form 'XdY+Z' or 'XdY-Z' (ex: 3d8+4).
    </small>
  </div>
</div>

<div class="row row-cols-sm-auto align-items-top">
  <label for="damageDropdown">Damage Type</label>
  <select name="damageDropdown" data-test-damage-dropdown {{on "change" @setDamageType}}>
    Damage Type
    {{#each this.damageTypes as |damageType|}}
    <option data-test-damage-{{damageType}} selected={{(eq @initialDamageType damageType)}}>{{damageType}}</option>
    {{/each}}
  </select>
</div>

<div class="row row-cols-sm-auto align-items-top">
  <div class="col">
    <Input data-test-resistant class="form-check-input" @type="checkbox" name="resistant" @checked={{@initialResistant}} {{on "input" (fn @setResistant)}} />
    <label class="form-check-label" for="resistant">
      Target Resistant
    </label>
    <Input data-test-vulnerable class="form-check-input" @type="checkbox" name="vulnerable"
      @checked={{@initialVulnerable}} {{on "input" (fn @setVulnerable)}} />
    <label class="form-check-label" for="vulnerable">
      Target Vulnerable
    </label>
  </div>
</div>