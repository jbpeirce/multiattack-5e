<div class='row align-items-center my-2'>
  <label for='damage-{{@index}}' class='col-6 col-form-label'>Damage Roll</label>
  <div class='col-6'>
    <input
      data-test-input-damage={{@index}}
      class='form-control'
      type='text'
      id='damage-{{@index}}'
      name='damage'
      aria-describedby='dmgDescription-{{@index}}'
      value={{@initialDamage}}
      {{on 'change' @setDamage}}
      required='required'
      pattern={{this.diceGroupsRegex}}
      title="Modifier must be dice groups and/or numbers added and subtracted, like '-5 + 1d4' or '7' or '1d4 - 1d6 + 2'"
    />
  </div>
</div>

<div class='row align-items-center my-2'>
  <label for='damageDropdown-{{@index}}' class='col-6 col-form-label'>Damage
    Type</label>
  <div class='col-6'>
    <select
      class='form-select'
      id='damageDropdown-{{@index}}'
      name='damageDropdown'
      data-test-damage-dropdown={{@index}}
      {{on 'change' @setDamageType}}
    >
      {{#each this.damageTypes as |damageType|}}
        <option
          selected={{eq @initialDamageType damageType.name}}
        >{{damageType.name}}</option>
      {{/each}}
    </select>
  </div>
</div>

<div class='form-check form-check-inline'>
  <input
    data-test-input-resistant={{@index}}
    class='form-check-input'
    type='checkbox'
    id='resistant-{{@index}}'
    name='resistant'
    checked={{@initialResistant}}
    {{on 'change' @setResistant}}
  />
  <label class='form-check-label' for='resistant-{{@index}}'>
    Target Resistant
  </label>
</div>
<div class='form-check form-check-inline'>
  <input
    data-test-input-vulnerable={{@index}}
    class='form-check-input'
    type='checkbox'
    id='vulnerable-{{@index}}'
    name='vulnerable'
    checked={{@initialVulnerable}}
    {{on 'change' @setVulnerable}}
  />
  <label class='form-check-label' for='vulnerable-{{@index}}'>
    Target Vulnerable
  </label>
</div>